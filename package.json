{
  "name": "level",
  "version": "0.2.0",
  "description": "'Spirit level web app'",
  "main": "index.js",
  "scripts": {
    "start": "superstatic",
    "prebuild": "rm -rf www && mkdir www",
    "build": "npm run -s build:markup && npm run -s build:scripts && npm run -s build:styles",
    "build:markup": "cp app/index.html www/",
    "build:scripts": "rollup -c",
    "build:styles": "node-sass app/styles/app.scss > www/app.css",
    "pretest:bundle": "rm -rf tmp && mkdir tmp",
    "test": "npm run -s test:bundle && npm run -s test:run",
    "test:watch": "chokidar '**/*.js' -i '**/bundle.js' -c 'npm -s test'",
    "test:bundle": "node build_test.js",
    "test:run": "karma start",
    "prefetch": "rm -rf app/styles/vendor && mkdir app/styles/vendor",
    "fetch": "npm run fetch:scut -s",
    "fetch:scut": "curl https://raw.githubusercontent.com/davidtheclark/scut/master/dist/_scut.scss > ./app/styles/vendor/_scut.scss"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:CrowdHailer/level.git"
  },
  "keywords": [
    "webapp",
    "offline",
    "level"
  ],
  "author": "Peter Saxton",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/CrowdHailer/level/issues"
  },
  "devDependencies": {
    "carbide": "CrowdHailer/carbide.js",
    "chokidar-cli": "^1.2.0",
    "jasmine": "^2.4.1",
    "karma": "^0.13.15",
    "karma-firefox-launcher": "^0.1.7",
    "karma-jasmine": "^0.3.6",
    "karma-rollup-preprocessor": "^2.0.0",
    "live-server": "^0.9.0",
    "rollup": "^0.21.2",
    "rollup-plugin-commonjs": "^1.4.0",
    "rollup-plugin-npm": "^1.1.0"
  },
  "dependencies": {
    "query-string": "^3.0.0"
  }
}
